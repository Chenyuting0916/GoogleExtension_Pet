{
  "name": "GoogleExtension_Pet",
  "version": "1.0.0",
  "description": "Build an Extension!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "web_accessible_resources": [
    "popup.html",
    "pet_image/*.png",
    "pet_image/*.jpg"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "jquery-3.4.1.min.js",
        "pet.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "jquery-3.4.1.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "pet",
    "default_popup": "popup.html",
    "default_title": "pet",
    "default_icon": {
      "16": "icon/get_started16.png",
      "32": "icon/get_started32.png",
      "48": "icon/get_started48.png",
      "128": "icon/get_started128.png"
    }
  },
  "icons": {
    "16": "icon/get_started16.png",
    "32": "icon/get_started32.png",
    "48": "icon/get_started48.png",
    "128": "icon/get_started128.png"
  },
  "manifest_version": 2
}